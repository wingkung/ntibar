@import 'nib/'

height=60px
width=1024px
dwidth=50px

.red
    color red

.green
    color green

.grey
    color grey

.black
    color #000000

.cornflowerblue
    color cornflowerblue

.orange
    color orange

.pink
    color pink

.blue
    color blue

.ntibar
    fixed top 60px
    box-shadow 0 0 5px #888888
    border-radius 5px
    width width
    right dwidth - width
    background-color #ffffff
    opacity 1.0
    z-index 999999999
    transition all 0.5s
    &:hover
        margin-left auto
        right 0


    form
        padding-top 5px
        padding-bottom 5px

    .status
        width dwidth

    .status-bar
        width 300px
        padding 0 10px 0 50px

    nti-func
        *
            display none
        &:last-child
            display block

.queues
    width 500px
    .queue
        width 100px