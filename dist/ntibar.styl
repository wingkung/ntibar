@import 'nib/'

height=60px
width=1024px
dwidth=50px

.red
    color red

.green
    color green

.grey
    color grey

.ntibar
    fixed top 60px
    box-shadow 0 0 5px #888888
    border-radius 5px
    width width
    right dwidth - width
    background-color #ffffff
    opacity 1.0
    z-index 999999999

    &:hover
        margin-left auto
        right 0
        transition eft .3s ease-in-out

    form
        padding-top 5px
        padding-bottom 5px

    .status
        width dwidth

    .status-bar
        width 200px
        padding 0 10px 0 10px